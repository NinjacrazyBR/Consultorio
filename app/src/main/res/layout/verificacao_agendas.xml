<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="430dp"
    android:layout_height="932dp"
    android:orientation="vertical"
    android:background="#2F2C2C"
    android:padding="0dp">

    <!-- Espaço até a caixa amarela -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="123dp" />

    <!-- Caixa amarela com texto -->
    <LinearLayout
        android:layout_width="424dp"
        android:layout_height="114dp"
        android:background="@drawable/fundo_amarelo_curvado"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="VERIFIQUE AS AGENDAS:"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Espaço até faixa Ortodontia -->
    <Space
        android:layout_width="420dp"
        android:layout_height="130dp" />

    <!-- Faixa Ortodontia -->
    <LinearLayout
        android:id="@+id/botaoOrto"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/fundo_amarelo"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:text="Ortodontia"
            android:textColor="#000000"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Espaço até Clareamento 1 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="28dp" />

    <!-- Clareamento 1 -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/fundo_amarelo"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clareamento"
            android:textColor="#000000"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Espaço até Clareamento 2 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="28dp" />

    <!-- Clareamento 2 -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/fundo_amarelo"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avaliação"
            android:textColor="#000000"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Espaço até botão SAIR -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!-- Botão SAIR -->
    <LinearLayout
        android:id="@+id/botaoSair"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/fundo_amarelo"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SAIR"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>