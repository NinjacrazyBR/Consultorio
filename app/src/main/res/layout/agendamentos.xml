<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="440dp"
    android:layout_height="956dp"
    android:orientation="vertical"
    android:background="#2F2C2C"
    android:padding="14dp">

    <!-- Ícones brancos topo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack1"
            android:layout_width="36dp"
            android:layout_height="26dp"
            android:src="@drawable/vector"/>

        <ImageView
            android:id="@+id/imgBack2"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_marginLeft="320dp"
            android:src="@drawable/ic_corner_icon" />
    </LinearLayout>

    <!-- Espaçamento -->
    <View android:layout_width="match_parent" android:layout_height="20dp" />

    <!-- Título PACIENTE -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PACIENTES:"
        android:textSize="48sp"
        android:textColor="#FFBB00"
        android:gravity="center"
        android:fontFamily="sans-serif-black" />

    <!-- Subtítulo Ortodontia -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="35sp"
        android:textColor="#E6D72E"
        android:gravity="center"
        android:fontFamily="sans-serif-black" />

    <!-- Espaçamento -->
    <View android:layout_width="match_parent" android:layout_height="40dp" />

    <!-- Lista de pacientes -->
    <!-- Repetição da estrutura: marcador + texto -->
    <!-- Charlie Puth -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_agendamentos"
            android:layout_width="match_parent"
            android:layout_height="692dp"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-black" />
    </LinearLayout>

</LinearLayout>