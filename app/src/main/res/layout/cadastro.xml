<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2F2C2C"
    android:gravity="center_horizontal"
    android:paddingTop="80dp"
    android:paddingBottom="40dp"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CADASTRO"
        android:textColor="#FFE74B"
        android:textSize="45sp"
        android:layout_marginBottom="40dp"
        android:fontFamily="" />

    <Button
        android:id="@+id/button_nome"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:text="Nome:"
        android:textColor="#000000"
        android:textSize="21sp"
        android:backgroundTint="#FFBB00"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button_numero"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:text="NÃºmero:"
        android:textColor="#000000"
        android:textSize="21sp"
        android:backgroundTint="#FFBB00"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button_email"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="21sp"
        android:backgroundTint="#FFBB00"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button_criar_senha"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:text="Criar senha:"
        android:textColor="#000000"
        android:textSize="21sp"
        android:backgroundTint="#FFBB00"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button_confirmar_senha"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:text="Confirmar senha:"
        android:textColor="#000000"
        android:textSize="21sp"
        android:backgroundTint="#FFBB00"
        android:gravity="center_vertical"
        android:layout_marginBottom="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/button_voltar"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:text="VOLTAR"
            android:textColor="#000000"
            android:textSize="25sp"
            android:backgroundTint="#FFBB00"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/button_concluir"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:text="CONCLUIR"
            android:textColor="#000000"
            android:textSize="25sp"
            android:backgroundTint="#FFBB00"
            android:layout_marginStart="10dp" />
    </LinearLayout>

</LinearLayout>
