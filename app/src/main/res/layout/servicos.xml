<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2C2C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:src="@drawable/banner_topo"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <!-- ORTODONTIA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ortodontia"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/fundo_amarelo_curvado"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:src="@drawable/img_ortodontia"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="AGENDAR CONSULTA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/fundo_amarelo"
            android:layout_marginBottom="24dp"/>

        <!-- CLAREAMENTO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Clareamento"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/fundo_amarelo_curvado"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:src="@drawable/img_clareamento"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="AGENDAR CONSULTA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/fundo_amarelo"
            android:layout_marginBottom="24dp"/>

        <!-- AVALIAÇÃO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Avaliação"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/fundo_amarelo_curvado"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="AGENDAR CONSULTA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/fundo_amarelo"
            android:layout_marginBottom="24dp"/>

        <!-- Rodapé -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="CANCELAR"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/fundo_amarelo"/>

    </LinearLayout>
</ScrollView>
