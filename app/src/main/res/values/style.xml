<resources>
    <style name="DiaSemanaStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFBB00</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DiaMesStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#AAAAAA</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DiaMesCinzaStyle" parent="DiaMesStyle">
        <item name="android:background">#666666</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>

    <style name="SemanaStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CalendarViewCustom" parent="Theme.MaterialComponents.DayNight">
        <item name="android:weekDayTextAppearance">@style/WeekDayTextStyle</item>
        <item name="android:dateTextAppearance">@style/DateTextStyle</item>
    </style>

    <style name="WeekDayTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#FFC107</item>
    </style>

    <style name="DateTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
